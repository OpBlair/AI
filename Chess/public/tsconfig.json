{
  "compilerOptions": {
    "target": "ES2017",          
    "module": "ES2020",
    "lib": ["DOM", "ES2017"],      
    "outDir": "./",              
    "rootDir": "./",             
    "strict": true,          
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./*.ts"],
  "exclude": ["node_modules"]
}
